<h1>Bookes</h1>
<table>
  
  <thead>
   <tr>
    <th>Title</th>
    <th>Body</th>
    <th>colspan="3"</th>
   </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
    <tr>
     <td><%=link_to book.title,book_path(book)%></td>
     <td><%=link_to book.body,book_path(book)%></td>
     <td><%=link_to"Show",book_path(book)%></td>
     <td><%=link_to"Edit"edit_book_path(book)%></td>
     <td><%=link_to"Destroy"book_path(book)method::delete,data:{confirm:"Are You Ok?"}%></td>
    </tr>
    <%end%>
  </tbody>
  
</table>


<h2>New book</h2>
<%= form_with model:@book,local:true do |f|%>
 <div>
  <%= f.label :Title%>
  <%= f.text_field :title%>
 </div>
 <div>
   <%= f.label :Body%>
   <%= f.text_area :body%>
   <%= f.submit'Create Book'%>
 </div>
